<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>DocumentManagementSystem</display-name>

    <!-- The front controller of this Spring Web application, responsible for handling all application requests -->
    <servlet>
        <servlet-name>dmsServlet</servlet-name>
        <servlet-class>ro.mihaidumitrescu.documentmanagementsystem.web.DocumentManagementServlet</servlet-class>
        <init-param>
            <param-name>applicationMode</param-name>
            <param-value>prod</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>dmsServlet</servlet-name>
        <url-pattern>/storage/documents*</url-pattern>
    </servlet-mapping>
</web-app>
